# Runtime
NODE_ENV=production
PORT=5000
TRUST_PROXY=true

# Security
SESSION_SECRET=BURAYA_UZUN_RANDOM_SECRET_YAZ
# localhost (http) icin oturum cookie'sinin gonderilmesi: COOKIE_SECURE=false
COOKIE_SECURE=false
NODE_TLS_REJECT_UNAUTHORIZED=0

# Database (Neon / Postgres)
DATABASE_URL=postgresql://USER:PASS@HOST/DBNAME?sslmode=require
DATABASE_SSL=true

# Proxy (optional - DataImpulse vb.)
PROXY_HOST=
PROXY_PORT=
PROXY_USER=
PROXY_PASS=

# Browser - Headful Chrome (Cloudflare bypass icin)
# Ideal: Google Chrome (gercek TLS fingerprint icin)
# Linux: apt install google-chrome-stable  (tercih)
#        apt install chromium               (alternatif)
# Linux icin Xvfb de gerekli: apt install xvfb
PUPPETEER_EXECUTABLE_PATH=
CHROMIUM_PATH=

# CF Bypass modu: headful (varsayilan) veya headless
# headful = gercek Chrome TLS + Xvfb sanal ekran (Cloudflare'i en iyi gecer)
# headless = eski mod, Xvfb gerektirmez ama Cloudflare yakalayabilir
# CF_HEADLESS=true  # sadece Xvfb kurulamazsa kullanin

# Captcha (optional)
CAPTCHA_API_KEY=

# Telegram (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 2FA E-posta (Resend â€“ stabil, iyi deliverability)
RESEND_API_KEY=
RESEND_FROM=onboarding@resend.dev
