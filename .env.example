# Runtime
NODE_ENV=production
PORT=5000
TRUST_PROXY=true

# Security
SESSION_SECRET=BURAYA_UZUN_RANDOM_SECRET_YAZ
# localhost (http) icin oturum cookie'sinin gonderilmesi: COOKIE_SECURE=false
COOKIE_SECURE=false
NODE_TLS_REJECT_UNAUTHORIZED=0

# Database (Neon / Postgres)
DATABASE_URL=postgresql://USER:PASS@HOST/DBNAME?sslmode=require
DATABASE_SSL=true

# Proxy (optional - DataImpulse vb.)
PROXY_HOST=
PROXY_PORT=
PROXY_USER=
PROXY_PASS=

# Browser (Cloudflare bypass icin - Linux: chromium-browser veya google-chrome)
# apt install chromium-browser   veya  apt install chromium
# Plesk/Linux: /usr/bin/chromium veya /usr/bin/chromium-browser
PUPPETEER_EXECUTABLE_PATH=
CHROMIUM_PATH=

# Captcha (optional)
CAPTCHA_API_KEY=

# Telegram (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 2FA E-posta (Resend â€“ stabil, iyi deliverability)
RESEND_API_KEY=
RESEND_FROM=onboarding@resend.dev
